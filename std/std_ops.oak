// Bools
let Copy(self: *bool, other: bool) -> bool; // This in C++

let Eq(self: bool, other: bool) -> bool
{
    if (self)
    {
        other
    }
    else
    {
        if (other)
        {
            false
        }
        else
        {
            true
        }
    }
}

let Neq(self: bool, other: bool) -> bool
{
    if (self)
    {
        if (other)
        {
            false
        }
        else
        {
            true
        }
    }
    else
    {
        other
    }
}

let Andd(self: bool, other: bool) -> bool
{
    if (self)
    {
        other
    }

    false
}

let Orr(self: bool, other: bool) -> bool
{
    if (self)
    {
        true
    }

    other
}

let Not(self: bool) -> bool
{
    if (self)
    {
        false
    }

    true
}

let AndEq(self: *bool, other: bool) -> bool
{
    if (other)
    {
        if (*self)
        {
            (*self) = true;
        }
        else
        {
            (*self) = false;
        }
    }
    else
    {
        (*self) = false;
    }

    (*self)
}

let OrEq(self: *bool, other: bool) -> bool
{
    if (other)
    {
        (*self) = true;
    }

    (*self)
}

