package!("std");
use_rule!("std_method");

package!("sdl");

let main() -> i32
{
    print("hi\n");

    sdl_init();

    let wind: sdl_window;

    let black: sdl_color;
    let white: sdl_color;
    let red: sdl_color;
    let green: sdl_color;
    let blue: sdl_color;

    white..New(to_u8(255), to_u8(255), to_u8(255), to_u8(255));
    red..New(to_u8(255), to_u8(0), to_u8(0), to_u8(255));
    green..New(to_u8(0), to_u8(255), to_u8(0), to_u8(255));
    blue..New(to_u8(0), to_u8(0), to_u8(255), to_u8(255));

    wind..fill(black);

    let rect: sdl_rect;
    rect..New(to_u64(10), to_u64(10), to_u64(10), to_u64(10));

    wind..draw_rect(rect, white);
      
    wind..show();

    sdl_delay(1000);

    wind..Del();

    sdl_quit();

    let i: i32;
    i = 0;

    0
}
