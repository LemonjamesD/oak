link!("extra/bit_print.o");

let PtrCpy(into: ^^void, from: ^i32) -> void
{
    ptrcpy!(^into, from);
}

let bit_print_internal(what: ^void, size: u128) -> void;

let bit_print<t>(what: ^t) -> void
{
    let ptr: ^void;
    let size: u128;

    PtrCpy(ptr, what);
    size = size!(^what);

    bit_print_internal(ptr, size);
}
